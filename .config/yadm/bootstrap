#!/bin/bash

sh setup-manjaro.sh
sh setup-python.sh
sh setup-fonts.sh
sh setup-emacs.sh

cd "$HOME"
yadm submodule update --recursive --init

# permissions
chmod 700 ~/.cache ~/.config

# sparse checkout to ignore README.md
yadm gitconfig core.sparseCheckout true
cat << EOF > "$HOME/.config/yadm/repo.git/info/sparse-checkout"
# generated by $0
/*
!README.md
!UNLICENSE
EOF
yadm checkout --quiet
